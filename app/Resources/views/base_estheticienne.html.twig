<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Accueil Estheticienne{% endblock %}</title>
        {% block stylesheets %}
        <link href="//fonts.googleapis.com/css?family=Lily+Script One:400" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="{{asset('bundles/InstantSoin/jquery/jquery-ui.css')}}">
        <link rel="stylesheet" href="{{asset('bundles/InstantSoin/css/bootstrap.css')}}">
        <link rel="stylesheet" href="{{asset('bundles/InstantSoin/css/style.css')}}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <section class="header">
                <header>
                    <hgroup>
                        <h2 class="titre">{% block InstantSoin_title %}<a href="{{ path( 'product_homepage' ) }}">L'instant soin</a>{% endblock %}</h2>
                    </hgroup>

                    {% block navigation %}
                        <nav>
                        <img class="logo" src="{{asset('bundles/InstantSoin/Images/bigpads.png')}}" alt="Impossible à charger">
                            <ul class="menu">

                                <li>
                                    <a href="{{ path( 'services_overall' ) }}">Mes clients</a>
                                    <ul>
                                            <li><a href="services_face">Créer un client</a></li>
                                            <li><a href="services_body">Modifier un client</a></li>
                                            <li><a href="services_soin">Supprimer un client</a></li>
                                    </ul>
                                </li>

                                <li>
                                    <a href="{{ path( 'product_overall' ) }}">Les commandes</a>
                                    <ul>
                                            <li><a href="{{ path( 'product_cremes' ) }}">Commandes passées</a></li>
                                            <li><a href="{{ path( 'product_gommages' ) }}">Gérer les commandes</a></li>
                                    </ul>
                                </li>

                                <li>
                                    <a href="{{ path( 'product_overall' ) }}">Le programme fidélité</a>
                                    <ul>
                                            <li><a href="{{ path( 'product_cremes' ) }}">Consulter les bons à échéance</a></li>
                                            <li><a href="{{ path( 'product_gommages' ) }}">Gérer les bons</a></li>
                                    </ul>
                                </li>
                            </ul>
                            <div class="connexion">
                                    {% if app.user %} 
                                        <a href="{{ path( 'logout' ) }}">Me déconnecter</a>
                                    {% else  %}
                                        <a href="{{ path( 'login' ) }}">Me connecter</a>
                                    {% endif %}
                                    <hr>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path( 'admin' ) }}">Administration</a>
                                    <hr>
                                    {% endif %}
                                    {% if is_granted('ROLE_ESTHETICIENNE') %}
                                        <a href="{{ path('estheticienne') }}">Administration</a>
                                    <hr>
                                    {% endif %}
                                    {% if is_granted('ROLE_USER') %}
                                        <a href="{{ path( 'user_profil' ) }}">Profil</a>
                                    <hr>
                                    {% endif %}
                                    {% if is_granted('ROLE_USER') or is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
                                        <a href="#">Mon panier</a>
                                    {% endif %}
                            </div>
                        </nav>
                        <hr>
                    {% endblock %}
                </header>
        </section>

        <section class="main-col">
                {% block body %}{% endblock %}
        </section>
        <aside class="sidebar">
                {% block sidebar_estheticienne %}{% endblock %}
        </aside>

        <section>
            <footer>
                {% block footer %}
                    <hr>
                        <p>Site internet créé par Arnaud Hascoet -&nbsp;<a href="{{ path( 'Demande_contact' ) }}">Contacter L'Instant Soin</a></p>
                {% endblock %}
            </footer>
        </section>

            {% block javascripts %}

            <script>
            $(function() {
            $( "#accordion" ).accordion();
            });
            </script>
            
            {% endblock %}

    </body>
</html>
