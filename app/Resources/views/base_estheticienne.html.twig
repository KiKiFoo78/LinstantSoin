<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Accueil Estheticienne{% endblock %}</title>
        {% block stylesheets %}
        <link href="//fonts.googleapis.com/css?family=Lily+Script One:400" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="{{asset('bundles/InstantSoin/jquery/jquery-ui.css')}}">
        <link rel="stylesheet" href="{{asset('bundles/InstantSoin/css/bootstrap.css')}}">
        <link rel="stylesheet" href="{{asset('bundles/InstantSoin/css/style.css')}}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('bundles/InstantSoin/Images/bigpads.png') }}" />
    </head>
    <body>
        <section class="header">
                <header>
                    <hgroup>
                        <h2 class="titre">{% block InstantSoin_title %}<a href="{{ path( 'product_homepage' ) }}">L'instant soin</a>{% endblock %}</h2>
                    </hgroup>

                    {% block navigation %}
                        <nav>
                        <img class="logo" src="{{asset('bundles/InstantSoin/Images/bigpads.png')}}" alt="Impossible à charger">
                            <ul class="menu">

                                <li>
                                    <a href="{{ path( 'services_overall' ) }}">Prestations</a>
                                    <ul>
                                            {% for Service in categoriesServ %}
                                            <li><a href="{{ path( 'services', {'id' : categoriesServ[ loop.index0 ].id } ) }}">{{categoriesServ[ loop.index0 ].intitule }}</a></li>
                                            {% endfor %}
                                    </ul>
                                </li>

                                <li>
                                    <a href="{{ path( 'product_overall' ) }}">La boutique</a>
                                    <ul>
                                            {% for Products in categoriesProd %}
                                            <li><a href="{{ path( 'products', {'id' : categoriesProd[ loop.index0 ].id } ) }}">{{categoriesProd[ loop.index0 ].intitule }}</a></li>
                                            {% endfor %}
                                    </ul>
                                </li>

                                <li>
                                    <a href="{{ path( 'product_overall' ) }}">Le programme fidélité</a>
                                    <ul>
                                            <li><a href="{{ path( 'product_cremes' ) }}">Consulter les bons à échéance</a></li>
                                            <li><a href="{{ path( 'product_gommages' ) }}">Gérer les bons</a></li>
                                    </ul>
                                </li>
                            </ul>
                            <div class="connexion">
                                    {% if app.user %} 
                                    <a href="{{ path( 'logout' ) }}">Deconnexion</a>
                                    {% else  %}
                                    <a href="{{ path( 'login' ) }}">Connexion</a>
                                    {% endif %}
                                    <hr>
                                    <a href="{{ path( 'product_homepage' ) }}">Accueil</a>
                                    <hr>
                                    <a href="{{ path( 'user_profil' ) }}">Profil</a>
                            </div>
                        </nav>
                        <hr>
                    {% endblock %}
                </header>
        </section>

        <section class="main-col">
                {% block body %}{% endblock %}
        </section>
        <aside class="sidebar">
                {% block sidebar %}{% endblock %}
        </aside>

        <section>
            <footer>
                {% block footer %}
                    <hr>
                        <p>Site internet créé par Arnaud Hascoet -&nbsp;<a href="{{ path( 'Demande_contact' ) }}">Contacter L'Instant Soin</a></p>
                {% endblock %}
            </footer>
        </section>

            {% block javascripts %}
            <script type="text/javascript"></script>
            <script src="//code.jquery.com/jquery-1.10.2.js"></script>
            <script src="//code.jquery.com/ui/1.11.2/jquery-ui.js"></script>
            <script>
            $(function() {
            $( "#accordion" ).accordion();
            });
            </script>
            
            {% endblock %}

    </body>
</html>
