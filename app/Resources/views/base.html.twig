<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Bienvenue !{% endblock %}</title>
        {% block stylesheets %}
        <link href="//fonts.googleapis.com/css?family=Lily+Script One:400" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="{{asset('bundles/InstantSoin/css/bootstrap.css')}}">
        <link rel="stylesheet" href="{{asset('bundles/InstantSoin/css/style.css')}}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <section class="header">
                <header>
                    <hgroup>
                        <h2 class="titre">{% block InstantSoin_title %}<a href="{{ path( 'product_homepage' ) }}">L'instant Soin</a>{% endblock %}</h2>
                    </hgroup>

                    {% block navigation %}
                        <nav>
                        <img class="logo" src="{{asset('bundles/InstantSoin/Images/logo.png')}}" alt="Impossible à charger">
                            <ul class="menu">
                                                                    
                                <li>
                                    <a href="{{ path( 'product_overall' ) }}">Produits</a>
                                    <ul>
                                            <li><a href="{{ path( 'product_cremes' ) }}">Crèmes de jour / crèmes de nuit</a></li>
                                            <li><a href="{{ path( 'product_gommages' ) }}">Gommages et masques</a></li>
                                            <li><a href="{{ path( 'product_maquillage' ) }}">Maquillage</a></li>
                                            <li><a href="{{ path( 'product_lotions' ) }}">Démaquillants et lotions</a></li>
                                            <li><a href="{{ path( 'product_parfumerie' ) }}">Parfumerie</a></li>
                                    </ul>
                                </li>

                                <li>
                                    <a href="{{ path( 'services_overall' ) }}">Services</a>
                                    <ul>
                                            <li><a href="services_face">Les soins visage</a></li>
                                            <li><a href="services_body">Les soins du corps</a></li>
                                            <li><a href="services_soin">Soin des ongles</a></li>
                                            <li><a href="services_forfaits">Les forfaits soin</a></li>
                                            <li><a href="services_massages">Massages</a></li>
                                            <li><a href="services_peeling">Epilations</a></li>

                                    </ul>
                                </li>

                                <li>
                                    <a href="{{ path( 'equipment_overall' ) }}">Matériels</a>
                                </li>

                                <li>
                                {{ form_start(search) }}
                                    {{ form_widget(search.recherche, {'attr': {'class': 'searchInput'}}) }}
                                    {{ form_widget(search.save) }}
                                {{ form_end(search) }}
                                </li>
                            </ul>
                            <div class="connexion">
                                    {% if app.user %} 
                                        <a href="{{ path( 'logout' ) }}">Me déconnecter</a>
                                    {% else  %}
                                        <a href="{{ path( 'login' ) }}">Me connecter</a>
                                    {% endif %}
                                    <hr>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path( 'admin' ) }}">Administration</a>
                                    <hr>
                                    {% endif %}
                                    {% if is_granted('ROLE_ESTHETICIENNE') %}
                                        <a href="{{ path('bibliotheque_bibliothecaire') }}">Administration</a>
                                    <hr>
                                    {% endif %}
                                    {% if is_granted('ROLE_USER') %}
                                        <a href="{{ path( 'bibliotheque_profil' ) }}">Profil</a>
                                    <hr>
                                    {% endif %}
                                    {% if is_granted('ROLE_USER') or is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
                                        <a href="#">Mon panier</a>
                                    {% endif %}
                            </div>
                        </nav>
                        <hr>
                    {% endblock %}
                </header>
        </section>

        <section class="main-col">
                {% block body %}{% endblock %}
        </section>
        <aside class="sidebar">
                {% block sidebar %}{% endblock %}
        </aside>

        <section>
            <footer>
                {% block footer %}
                    <hr>
                        <p>Site internet créé par Arnaud Hascoet -&nbsp;<a href="{{ path( 'Demande_contact' ) }}">Contacter L'Instant Soin</a></p>
                {% endblock %}
            </footer>
        </section>

            {% block javascripts %}
            <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
            <script type="text/javascript">
            function initialisation(){
                var centreCarte = new google.maps.LatLng(49.023402, 1.705735);
                var optionsCarte = {
                    zoom: 9,
                    center: centreCarte,
                    marker: true,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                }

                var maCarte = new google.maps.Map(document.getElementById("EmplacementDeMaCarte"), optionsCarte);

                var marker = new google.maps.Marker({
                    position: centreCarte,
                    map: maCarte
                });

                var optionsCercle = {
                    map: maCarte,
                    center: maCarte.getCenter(),
                    radius: 15000
                }
                var monCercle = new google.maps.Circle(optionsCercle);
            }
            google.maps.event.addDomListener(window, 'load', initialisation);
            </script>
            {% endblock %}

    </body>
</html>
